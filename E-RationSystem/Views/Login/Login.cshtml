@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @* <b class="display-3" style="color:rgb(100, 128, 104);"  >Welcome to E-Ration System</b> *@



    <section class="body" style="background-image:url(/images/image1.jpg);background-size: cover;background-repeat: no-repeat;background-position: center; " ;>
        <b class="display-3" style="color:rgb(100, 128, 104);">Welcome to E-Ration System</b>
        <div class="container py-5 h-10">
            <div class="row d-flex justify-content-center ">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center" style="background-color: rgb(48, 184, 68,0.3);">

                            <h3 class="mb-6" style="color: blue;">Sign in</h3>
                            <form action="/Login/login" method="post">
                             <div>
                                <h3>@TempData["message"]</h3>
                             </div>
                            <div class="form-outline mb-4 ">
                                    <input type="username" id="username" name="User_Name" class="form-control form-control-lg" placeholder="username" />
                                <label class="form-label d-flex align-items-left">Username</label>
                            </div>

                            <div class="form-outline mb-4">
                                    <input type="password" id="typePasswordX-2" name="Password" class="form-control form-control-lg" placeholder="password" />
                                <label class="form-label d-flex align-items-left" for="typePasswordX-2">Password</label>
                            </div>

                            <!-- Checkbox -->
                            <div class="form-check d-flex justify-content-start mb-4">
                                <input class="form-check-input" type="checkbox" value="" id="form1Example3" />
                                <label class="form-check-label" for="form1Example3"> Remember password </label>
                            </div>

                            <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button><br />
                                <a class="small text-muted" href="/Home/Index">Return to Home</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>









