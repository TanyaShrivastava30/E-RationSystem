    <section class="vh-10" style="background-image:url(/images/image1.jpg);background-size: cover;background-repeat: no-repeat;background-position: center;" ;>
        <b class="display-4" style="color:  rgb(27, 16, 122);">Welcome to E-Ration System</b>
        <div class="container py-5 h-50">
            <div class="row d-flex justify-content-center align-items-center h-800">
                <div class="col col-xl-6">
                    <div class="card" style="border-radius: 4rem;">
                        <div class="row g-0">
                            <div class="col-md-7 col-lg-5 d-none d-md-block" style="background-color: rgb(48, 184, 68,0.3);">
                                <br />
                                <br />

                                <img src="/images/grains2.jpg" width="800" height="5000
                                     alt="login form" class="img-fluid" style="border-radius: 0.5rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center" style="background-color: rgb(48, 184, 68,0.3);;">
                                <div class="card-body p-3 p-lg-4 text-black">

                                    <form asp-action="Consumer_login" asp-controller="Consumer" method="post">
                                        <h3>@TempData["message"]</h3>

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <i class="fas fa-cubes fa-2x me-3" style="color: hsl(236, 100%, 55%);"></i>
                                            <span class="h1 fw-bold mb-0"></span>
                                        </div>
                                        <br />
                                        <h5 class="fw-normal mb-4 pb-1 align-items-center" style="letter-spacing: 0.5px; color:hsl(236, 100%, 55%);">Sign into your account</h5>

                                        <div class="form-outline mb-2">
                                            <input type="text" id="ration card" class="form-control form-control-lg" name="Ration_Id" placeholder="ration card number" />

                                            <label class="form-label d-flex align-items-left" for="form2Example17">Ration Card Number</label>
                                        </div>
                                        <br />
                                        <div class="form-outline mb-4">
                                            <input type="password" id="form2Example27" class="form-control form-control-lg" name="Password" placeholder="password" />
                                            <label class="form-label d-flex align-items-left" for="form2Example27">Password</label>
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <button class="btn" type="submit" name="btn" style="background-color: rgb(0, 110, 255);">Login</button>
                                        </div>
                                        <a class="small text-muted" href="/Home/Index">Return to Home</a>
                                        <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                            Apply For New Card? <a href="/Consumer/Registration"
                                                                   style="color: #393f81;">Register here</a>
                                        </p>

                                        @*<a class="small text-muted" href="#!">Forgot password?</a>*@
                                        @* <p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account? <a href="#!"
                                        style="color: #393f81;">Register here</a></p> *@
                                        @* <a href="#!" class="small text-muted">Terms of use.</a>
                                        <a href="#!" class="small text-muted">Privacy policy</a> *@
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



</div>
