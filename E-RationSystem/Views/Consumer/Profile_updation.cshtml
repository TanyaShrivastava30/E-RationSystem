@using BOL
@{
    Consumer c = ViewData["profile"] as Consumer;
}
  


<head>
    <link rel="stylesheet" href="~/css/profile.css" />
</head>
<body>
    @*<script>
        function myFunction(){
            document.getElementById("demo").innerHTML = alert("profile updated successfully");
        }
    </script>*@
<form> 
<div class="container-xl px-4 mt-4">
    

    <hr class="mt-0 mb-4">
    <div class="row">
        
        <div class="col-xl-8">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Account Updation</div>
                <div class="card-body">
                    <form>
                        <!-- Form Group (username)-->
                        <div class="mb-3">
                            <label class="small mb-1" for="ration card">Ration Card Number</label>
                            <input class="form-control" id="ration card" type="text" name="Ration_Id" placeholder="ration card number" value="@c.Ration_Id" readonly>
                            <label class="small mb-1" for="inputFirstName" >Full Name</label>
                                <input class="form-control" id="Name" type="text" name="Name" placeholder="Enter your name" value="@c.Name" readonly>
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (first name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="adharnumber">Adhar Number</label>
                                    <input class="form-control" id="adharnumber" type="text" name="Adhar_No" placeholder="adhar number" value="@c.Adhar_No" readonly>
                            </div>
                            <!-- Form Group (last name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="mobilenumber">Mobile Number</label>
                                    <input class="form-control" id="mobilenumber" type="text" name="Mobile_No" value="@c.Mobile_No" placeholder="mobile number">
                            </div>
                        </div>
                        <!-- Form Row        -->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (organization name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="cardtype">Card Type</label>
                                    <input class="form-control" id="cardtype" type="text" name="Card_Type" placeholder="card type" value="@c.Card_Type" readonly>
                            </div>
                            <!-- Form Group (location)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="gender">Gender</label>
                                    <input class="form-control" id="gender" type="text" name="Gender" placeholder="gender" value="@c.Gender" readonly>
                            </div>
                        </div>
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (organization name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="address">Address</label>
                                    <input class="form-control" id="address" type="text" name="Address" placeholder="address" value="@c.Address">
                            </div>
                            <!-- Form Group (location)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="pincode">Pincode</label>
                                    <input class="form-control" id="pincode" type="text" name="Pincode" placeholder="pincode" value="@c.Pincode">
                            </div>
                        </div>
                       
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (organization name)-->
                            <div class="col-md-6">
                               <label class="small mb-1" for="password">Password</label>
                                    <input class="form-control" id="password" type="password" name="Password" placeholder="password" value="@c.Password">
                            </div>
                            <!-- Form Group (location)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="birthday">Date Of Birth</label>
                                    <input class="form-control" id="birthday" type="text" name="Date_of_Birth" placeholder="birthday" value="@c.Date_of_Birth" readonly>
                            </div>
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (phone number)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="income">Income</label>
                                    <input class="form-control" id="income" type="text" name="Income" placeholder="income" value="@c.Income">
                            </div>
                            <!-- Form Group (birthday)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="members">Total Members</label>
                                    <input class="form-control" id="members" type="text" name="Total_Members" placeholder="members" value="@c.Total_Members">
                            </div>
                        </div>
                        <!-- Save changes button-->
                        <button class="btn btn-primary" @*onclick="myFunction()"*@ type="button">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</form>
</body>